<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.fitnessworld.programs"
            prefHeight="600.0" prefWidth="600.0">
    <HBox spacing="20" style="-fx-padding: 10;">
        <VBox fx:id="leftVBox" spacing="10" prefWidth="500" HBox.hgrow="ALWAYS">
            <ScrollPane fitToWidth="true" prefHeight="600">
                <ListView fx:id="coursesListView" />
            </ScrollPane>
        </VBox>

        <VBox alignment="CENTER" fx:id="rightVBox" prefHeight="600" spacing="10" prefWidth="200"
              HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom, #e0e0e0, #9e9e9e);">
            <Button text="Add Course" onAction="#handleAddProgram" />
            <Button text="Update Course" onAction="#handleUpProgram" />
            <Button text="Delete Selected" onAction="#handleDeleteProgram" />

        </VBox>
    </HBox>
</AnchorPane>