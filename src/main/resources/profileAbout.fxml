<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.fitnessworld.profileAbout" alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #b2ebf2); -fx-padding: 30;">


    <Label text="About" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #004d98;"/>


    <VBox spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="User Name:" style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #004d98;"/>
        </HBox>
        <Label fx:id="usernameLabel" style="-fx-pref-height: 40px; -fx-border-color: #004d98; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </VBox>


    <VBox spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Email:" style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #004d98;"/>
        </HBox>
        <Label fx:id="emailLabel" style="-fx-pref-height: 40px; -fx-border-color: #004d98; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </VBox>


    <VBox spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Token:" style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #004d98;"/>
        </HBox>
        <Label fx:id="TokenLabel" style="-fx-pref-height: 40px; -fx-border-color: #004d98; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </VBox>


    <Button text="OK" onAction="#handleok" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #004d98; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 40px; -fx-pref-width: 150px;"/>
</VBox>
