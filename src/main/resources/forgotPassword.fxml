<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="468.0" style="-fx-background-color: linear-gradient(to bottom, #e6f7ff, #99ccff);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fitnessworld.ForgotPassword">

    <VBox alignment="CENTER" layoutY="44.0" prefHeight="352.0" prefWidth="468.0" spacing="20">
        <padding>
            <Insets bottom="25" left="30" right="30" top="30" />
        </padding>

        <Label text="Forgot Password" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #003366;" />

        <HBox alignment="CENTER_LEFT" spacing="5">
            <Label style="-fx-font-size: 18px; -fx-font-style: italic; -fx-font-weight: bold; -fx-text-fill: #003366;" text=" Email ">
                <font>
                    <Font name="Baskerville Old Face" size="16.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="emailField" prefHeight="35" prefWidth="300" promptText="Enter your email" style="-fx-background-color: #f0f8ff; -fx-border-color: #99ccff; -fx-border-radius: 5px;" />
            </HBox>
        </HBox>


        <HBox spacing="10">
            <Label style="-fx-font-size: 18px; -fx-font-style: italic; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Token">
                <font>
                    <Font name="Baskerville Old Face" size="16.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="tokenField" prefHeight="35" prefWidth="300" promptText="Enter your verification token" style="-fx-background-color: #f0f8ff; -fx-border-color: #99ccff; -fx-border-radius: 5px;" />
            </HBox>
        </HBox>


        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleCancel" prefHeight="35" prefWidth="120" style="-fx-background-color: #003366; -fx-text-fill: white; -fx-font-style: italic; -fx-font-weight: bold; -fx-font-size: 16px; -fx-border-radius: 5px;" text="Cancel">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button onAction="#handleSubmit" prefHeight="35" prefWidth="120" style="-fx-background-color: #003366; -fx-text-fill: white; -fx-font-style: italic; -fx-font-weight: bold; -fx-font-size: 16px; -fx-border-radius: 5px;" text="Submit">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </HBox>

    </VBox>
</AnchorPane>
