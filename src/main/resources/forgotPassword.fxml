<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER_LEFT" prefHeight="623.0" prefWidth="468.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.fitnessworld.ForgotPassword">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Email Field -->
    <HBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Email   ">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="emailField" prefHeight="35" prefWidth="300" promptText="Enter your email" />
        </HBox>
    </HBox>

    <HBox spacing="10">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Token">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="tokenField" prefHeight="35" prefWidth="300" promptText="Enter your verification token" />
        </HBox>
    </HBox>

    <HBox alignment="CENTER">
        <Button onAction="#handleSubmit" prefHeight="30" prefWidth="120" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Submit">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </HBox>

    <HBox alignment="CENTER">
        <Button onAction="#handleCancel" prefHeight="30" prefWidth="120" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Cancel">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </HBox>
</VBox>
