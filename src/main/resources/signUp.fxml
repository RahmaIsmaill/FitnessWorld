<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="468.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fitnessworld.signUpController">
    <VBox alignment="CENTER_LEFT" prefHeight="650.0" prefWidth="468.0" spacing="10" >
        <padding>
            <Insets bottom="20" left="20" right="20" top="40" />
        </padding>


        <Label style="-fx-font-size: 36px; -fx-font-weight: bold;" text="Sign Up">
            <font>
                <Font name="Bell MT" size="36.0" />
            </font>
            <VBox.margin>
                <Insets top="-50" />
            </VBox.margin>
        </Label>


    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
        <Label style="-fx-font-size: 16px;" text="First Name">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="fNameField" prefHeight="35" prefWidth="300" />
        </HBox>
</VBox>

    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
        <Label style="-fx-font-size: 16px;" text="Last Name">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="lNameField" prefHeight="35" prefWidth="300" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">

        <Label style="-fx-font-size: 16px;" text="UserName">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="userNameField" prefHeight="35" prefWidth="300" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
        <Label style="-fx-font-size: 16px;" text="Email">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="EmailField" prefHeight="35" prefWidth="300" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
        <Label style="-fx-font-size: 16px;" text="Password">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox fx:id="passwordContainer" alignment="CENTER_LEFT" spacing="10">
            <PasswordField fx:id="passwordField" prefHeight="35" prefWidth="300" />
            <CheckBox fx:id="showPasswordCheckbox" onAction="#handleShowPassword" style="-fx-font-size: 14px;" text="Show" />
        </HBox>
    </VBox>


        <VBox spacing="20">
    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
        <Label style="-fx-font-size: 16px;" text="Token">
            <font>
                <Font name="Arial Rounded MT Bold" size="16.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="tokenField" prefHeight="35" prefWidth="300" />
        </HBox>
    </VBox>
        </VBox>

    <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="10" >
    <HBox alignment="BOTTOM_LEFT" spacing="20">
        <Button onAction="#handlejoinNow" prefHeight="30" prefWidth="300" style="-fx-background-color: #009bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Join now">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </HBox>

        </VBox>

</VBox>
        </AnchorPane>