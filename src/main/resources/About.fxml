<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.fitnessworld.About"
            prefHeight="700.0" prefWidth="400.0"
            style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #b3cde0);">

    <VBox alignment="CENTER_LEFT" prefHeight="650.0" prefWidth="468.0" spacing="15">
        <padding>
            <Insets bottom="20" left="40" right="40" top="40"/>
        </padding>

        <Label style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #004d99;" text="Join Us">
            <font>
                <Font name="Verdana" size="42.0"/>
            </font>
        </Label>


        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 18px; -fx-text-fill: #004d99;" text="Age">
                <font>
                    <Font name="Arial" size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="ageField" prefHeight="35" prefWidth="300"
                           style="-fx-background-color: #e6f2ff; -fx-border-color: #004d99; -fx-border-radius: 5;"/>
            </HBox>
        </VBox>

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 18px; -fx-text-fill: #004d99;" text="Weight">
                <font>
                    <Font name="Arial" size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="weightField" prefHeight="35" prefWidth="300"
                           style="-fx-background-color: #e6f2ff; -fx-border-color: #004d99; -fx-border-radius: 5;"/>
            </HBox>
        </VBox>


        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 18px; -fx-text-fill: #004d99;" text="Height">
                <font>
                    <Font name="Arial" size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="heightField" prefHeight="35" prefWidth="300"
                           style="-fx-background-color: #e6f2ff; -fx-border-color: #004d99; -fx-border-radius: 5;"/>
            </HBox>
        </VBox>


        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 18px; -fx-text-fill: #004d99;" text="Goal">
                <font>
                    <Font name="Arial" size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="goalField" prefHeight="35" prefWidth="300"
                           style="-fx-background-color: #e6f2ff; -fx-border-color: #004d99; -fx-border-radius: 5;"/>
            </HBox>
        </VBox>


        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 18px; -fx-text-fill: #004d99;" text="Membership Date">
                <font>
                    <Font name="Arial" size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="membershipDateField" prefHeight="35" prefWidth="300"
                           style="-fx-background-color: #e6f2ff; -fx-border-color: #004d99; -fx-border-radius: 5;"/>
            </HBox>
        </VBox>

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="10">
            <HBox alignment="BOTTOM_LEFT" spacing="20">
                <Button onAction="#handlejoinNow" prefHeight="40" prefWidth="300"
                        style="-fx-background-color: #004d99; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-border-radius: 10; -fx-background-radius: 10;"
                        text="Join Now">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
