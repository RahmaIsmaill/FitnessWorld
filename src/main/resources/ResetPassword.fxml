<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.fitnessworld.ResetPassword" alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #b2ebf2); -fx-padding: 30;">

    <Label text="Reset Password" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #004d98;"/>

    <VBox spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="New Password:" style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #004d98;"/>
        </HBox>
        <PasswordField fx:id="newPassField" promptText="Enter a strong password (8+ characters)" style="-fx-pref-height: 40px; -fx-border-color: #004d98; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </VBox>

    <VBox spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Confirm Password:" style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #004d98;"/>
        </HBox>
        <PasswordField fx:id="confirmPassField" promptText="Confirm new password" style="-fx-pref-height: 40px; -fx-border-color: #004d98; -fx-border-radius: 5; -fx-background-radius: 5;"/>
    </VBox>

    <Button text="Confirm" onAction="#handleConfirm" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #004d98; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 40px; -fx-pref-width: 150px;"/>
</VBox>
